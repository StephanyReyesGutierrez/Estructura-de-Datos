        int n = teclado.nextInt();
        
        // Imprimimos el cuadrado con solo el contorno
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                // Imprimimos asteriscos solo en los bordes i filas, j columnas 
                if (i == 0 || i == n - 1 || j == 0 || j == n - 1) {
                    //Si las condiciones se cumplen se mostraran asteriscos
                    System.out.print("*");
                } else {
                    //Los demas espacios solo mostraran un espacio
                    System.out.print(" ");
                }
            }
            System.out.println();  // Nueva línea después de cada fila ya que sin esta todo aparece corrido 
        }

    }
